<h1 class="text-center">Eat-Da-Burger!!</h1>


<div class="row">
      <div class="col-md-2"></div>

      <div class="col-md-4"> 
      <div class="col-md-2"></div>
        <ul class="col-md-8 text-center burger">
          <h2 class="text-center">List of burgers!</h2>
          {{#each burgers}}
            {{#unless devour}}
              {{> burgers/burger-block devour=true}}
            {{/unless}}
          {{/each}}
        </ul>
        <div class="col-md-2"></div>
      </div>

      <div class="col-md-2" id="uploadPic"></div>

        <div class="col-md-4">
          <div class="col-md-2"></div>
          <ul class="col-md-8">
            <h2 class="text-center">Devour it!</h2>
          {{#each burgers}}
            {{#if devour}}
              {{> burgers/burger-block devour=false}}
            {{/if}}
          {{/each}}
        </ul>
        <div class="col-md-2"></div>
        </div>
</div>

<h2 class="text-center">Add a Burger</h2>
<form class="create-form text-center">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div>
    <h5>Enter the burger you want to eat and Click the "Add burger" button</h5>
  </div>

  <button type="submit">Add Burger</button>
  </form>
